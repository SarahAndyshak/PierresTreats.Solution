@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Flavor

<h2>Edit this Flavor</h2>

<h4>Edit this flavor: @Html.DisplayFor(model => model.FlavorType)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)

  @Html.LabelFor(model => model.FlavorType)
  @Html.EditorFor(model => model.FlavorType)

  <input type="submit" value="Save" />
}